
import ./{runner/settings}!
import ./{runner/cli}!

print express args

if unknownArguments? args [
    print ~{Unknown argument(s): |join.with: ", " unknownArguments args|.}
    print help
    exit 1
]

if helpAsked? args [
    print help
    exit 0
]

settings: settings args read.toml "unitt.toml"!

